<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1600px;min-width:500px" id="home">
  <img class="w3-image"
    src="https://res.cloudinary.com/dvncucx9s/image/upload/v1673373399/Captura_de_ecr%C3%A3_2023-01-10_175254_yzx2fv.png" alt="shinshan"
    width="1600" height="800">
  <div class="w3-display-bottomleft w3-padding-large w3-opacity">

  </div>
</header>

<hr>

<div class="row">
  {{#each animes}}

  <div class="card m-2" style="width: 15rem;">
    <img src="{{attributes.posterImage.large}}" class="card-img-top" alt="Anime">
    <div class="card-body">
      <h5> {{attributes.title.en}}
        {{#unless attributes.title.en}}
        {{attributes.canonicalTitle}}
        {{/unless}}</h5>
      <p class="card-text">Top #{{attributes.popularityRank}}</p>
      <a href="/anime/{{attributes.slug}}" class="btn btn-primary">See details</a>
    </div>
  </div>

  {{/each}}
</div>